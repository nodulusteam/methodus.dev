{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types"
        ],
        
        "rootDir": "src",
        "outDir": "lib",
        "declaration": true,
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "preserveConstEnums": true, 
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "suppressImplicitAnyIndexErrors": true,
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}